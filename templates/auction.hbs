<h1>{{title}}</h1>
<h2>{{identifier}}</h2>

{{#each items as |item|}}
{{#link-to 'item' item.id}}
  <p>Item Name: {{item.name}}</p>
  <p>Bid Number: {{item.bidNumber}}</p>
  <p>Starting Price: {{item.startPrice}}</p>
  <p>Image: <img {{bind-attr src=item.image }}></p>
{{/link-to}}
{{/each}}


<p>{{#link-to 'new-item' this.id class="btn btn-default"}}Add New Item to Auction{{/link-to}}</p>

{{outlet}}

<button class="btn btn-danger" {{action 'delete'}}>Delete this Auction</button>
